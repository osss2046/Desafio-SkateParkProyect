<h1>Skate Park</h1>
<div class="py-4">
    <h2>Lista de participantes</h2>
    <hr class="w-50 mx-auto" />
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Foto</th>
                <th scope="col">Nombre</th>
                <th scope="col">Años de experiencia</th>
                <th scope="col">Especialidad</th>
                <th scope="col">Estado</th>
            </tr>
        </thead>
        <tbody>
            {{#each skaters}}
            <tr>
                <th scope="row">{{@index}}</th>
                <td><div style="background-image: url('/images/{{this.foto}}');"></div></td>
                <td>{{this.nombre}}</td>
                <td>{{this.anos_experiencia}}</td>
                <td>{{this.especialidad}}</td>
                <td class="{{#if this.estado}}text-success font-weight-bold{{else}}text-warning font-weight-bold{{/if}}">
                    {{#if this.estado}}Aprobado{{else}}En revisión{{/if}}
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <a href="/login">Iniciar Sesión</a> |
    <a href="/register">Registrarme</a>
</div>
